extends layout

block content
	// Page Header
	header.masthead(style="background-image: url('img/home-bg.jpg')")
		.overlay
		.container
			.row
				.col-lg-8.col-md-10.mx-auto
					.site-heading
						h1 Edit Section
	// Main Content
	.container
		.row
			.col-lg-8.col-md-10.mx-auto
				each post, i in posts
					.post-preview
						a(href='/posts/#{post.tag}')
							h2.post-title
								| !{post.title}
							h3.post-subtitle
								| !{post.meta_body}
							a(href='/posts/update/#{post.tag}') Edit
					hr
				// Pager
				.clearfix
					a.btn.btn-primary.float-right(href='#') Older Posts â†’
	hr

